  "protocol_handlers": [
    {
      "protocol": "web+nanimade",
      "url": "/handle-protocol?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/handle-recipe",
      "accept": {
        "application/json": [".recipe"]
      }
    }
  ],
  "share_target": {
    "action": "/share-recipe",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "recipe_image",
          "accept": ["image/*"]
        }
      ]
    }
  }
